{
	"exclude": [
		"node_modules/",
		"dist/",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		".git/",
		".github/",
		".vscode/",
	],
	"include": [ "src/**/*" ],
	"compilerOptions": {
		"outDir": "dist/",
		"baseUrl": "./src",
		"rootDir": "./src",
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES6",
		"lib": [ "ESNext", "DOM" ],
		
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
	}
}
